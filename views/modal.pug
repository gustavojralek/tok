
mixin modal(id, title, icon)
    .modal.fade(id="modal-" + id)
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-header
                        if title
                            h5.modal-title= title
                        button.close(type="buttton", data-dismiss="modal", aria-lavel="Close")
                            span(aria-hidden="true") &times;

                    .modal-body
                        .input-group.mb-3.input-group-lg(id="search")
                            //input( id="pac-input" class="controls" type="text" placeholder="Search Box")
                            input.form-control(id=id type="text" placeholder="Contraseña..." aria-label="Recipient's username" aria-describedby="button-addon2" required)
                            .input-group-append
                                a
                                    img(id="search-button" src="/images/brujula-01.svg")

                                //button.btn.btn-secondary(type="button" id="button-addon2")
                                    i.fas(class = icon || "fa-map-marker-alt")
                            .invalid-feedback "Contraseña incorrecta"
